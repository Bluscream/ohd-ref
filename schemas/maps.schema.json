{
    "$schema": "http://json-schema.org/draft-06/schema#",
    "$ref": "#/definitions/Maps",
    "additionalProperties": false,
    "definitions": {
        "Maps": {
            "type": "object",
            "uniqueItems": true,
            "additionalProperties": {
                "$ref": "#/definitions/Map"
            },
            "title": "Maps",
            "description": "Dictionary of defined or available maps"
        },
        "Map": {
            "type": "object",
            "additionalProperties": false,
            "properties": {
                "mode": {
                    "$ref": "#/definitions/GameMode"
                },
                "name": {
                    "type": "string",
                    "title": "Display Name",
                    "description": "A human-readable title for the map"
                },
                "path": {
                    "type": "string",
                    "examples": [
                        "/HDAssets/Maps/AlDhakir/GameplayLayers/AlDhakir",
                        "steam.90201159165580288/HDCore/Maps/Dev/AAS-TestMap"
                    ],
                    "title": "umap path",
                    "description": "Path to the maps .umap file within the .pak"
                },
                "mod": {
                    "$ref": "#/definitions/Mod"
                }
            },
            "required": [
                "path"
            ],
            "title": "Map",
            "description": "A defined or available map"
        },
        "GameMode": {
            "type": "string",
            "enum": [
                "skirmish",
                "training"
            ],
            "title": "Game Mode"
        },
        "Mod": {
            "type": "object",
            "additionalProperties": false,
            "properties": {
                "url": {
                    "type": "string"
                },
                "name": {
                    "type": "string"
                }
            },
            "title": "Mod",
            "description": "Mod the map originates from"
        }
    }
}
